#!/bin/sh

cd "$(dirname "$0")/.."

[ -z ${PWD:+PWD} ] || [ "$PWD" != "$(pwd)" ] && export PWD="$(pwd)"

echo 'ðŸ’£  Cleaning up...'

. "$PWD/bin/clean"

echo '
ðŸ“¦  Building...'

printf 'Creating `./dist` artifact ... '

cp -R "$PWD/src" "$PWD/dist" >/dev/null 2>&1

[ $? -ne 0 ] && echo 'failed.' && exit 1

echo 'success.'
