#!/bin/sh

cd "$(dirname "$0")/.."

[ -z ${PWD:+PWD} ] || [ "$PWD" != "$(pwd)" ] && export PWD="$(pwd)"

usage="$(cat <<EOF
Usage: test [option]

Description:
  TBD

Options:
  -?, -h, --help    Show usage (print this text)
EOF
)"

if [ "$1" = '-?' ] || [ "$1" = '-h' ] || [ "$1" = '--help' ]
  then
    echo "$usage"

    exit
fi

unset usage

. "$HOME/.profile" >/dev/null 2>&1

# TODO: Run specs in lib/test
